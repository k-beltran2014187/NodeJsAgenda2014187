extends layout

block content
  div(class="row")
    div(class="page-header")
      h1 Categorias
  div(class="row")
    div(class="col-md-10")
      h2 Lista de categorias
      table(class="table table-hover")
        thead
          tr
            th Nombre del Categoria
        tbody(data-bind="foreach: categorias")
          tr
            td(data-bind="text: nombreCategoria")
      button(type="button" class="btn btn-primary" data-toggle="modal"
              data-target="#modalAgregarCategoria") Agregar

  div(class="modal fade" tabindex="-1" id="modalAgregarCategoria"
         role="dialog" aria-labelledby="myModalLabel")
      div(class="modal-dialog" role="document")
          div(class="modal-content")
              form(data-bind="submit: agregar")
                  div(class="modal-header")
                      button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                          span(aria-hidden="true")
                      h3(class="modal-title") Agregar Categoria
                  div(class="modal-body")
                      div(class="form-group")
                          label Nombrev
                          input(type="text" class="form-control" name="nombreCategoria" id="nombreCategoria" data-bind="value: categoriaNuevo.nombreCategoria")
                  div(class="modal-footer")
                      button(type="button" class="btn btn-default" data-dismiss="modal") Cerrar
                      button(type="submit" class="btn btn-primary") Guardar
  include footer
    script(src="/javascripts/categoriaCliente.js")